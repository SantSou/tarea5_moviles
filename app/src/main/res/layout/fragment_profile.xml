<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_photo"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/profile_pic_default"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pepito"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_photo"
        app:layout_constraintStart_toEndOf="@+id/profile_photo"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cerrar SesiÃ³n"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_name_tv"
        app:layout_constraintStart_toEndOf="@+id/profile_name_tv"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="pepito_pecas@iteso.mx"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_photo"
        app:layout_constraintStart_toEndOf="@+id/profile_photo"/>



</androidx.constraintlayout.widget.ConstraintLayout>